<div class="row">
  {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <!-- a card-title agrego propiedades para alinear el icono -->
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    <!-- luego de title se agrega el icono -->
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <!-- Se agrega un boton para borrar-->
                <button class="btn btn-danger btn-block btn-sm">
                    Delete
                </button>
            </div>
        </div>
    </div>
  {{else}} <!-- Si no existen notas-->
    <div class="card mx-auto">
        <div class="card-body">
            <p class="lead">There are not notes yet.</p>
            <a href="/notes/add" class="btn btn-success btn-block">Create one!</a>
        </div>
    </div>
  {{/each}}
</div>